<UserControl x:Class="IEL.GUI.IELBlockInfoImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IEL.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30">
    <Grid>
        <Rectangle x:Name="RectangleBackground" Fill="Red" RadiusX="6.1" RadiusY="6.1"/>
        <Border x:Name="MainBorder" BorderThickness="2,2,2,2" CornerRadius="5,5,5,5" Cursor="Help" ClipToBounds="True" BorderBrush="Black">
            <Border.Background>
                <ImageBrush/>
            </Border.Background>
        </Border>
    </Grid>
</UserControl>
