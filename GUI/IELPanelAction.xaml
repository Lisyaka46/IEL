<Base:IELObject
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:Base="clr-namespace:IEL.CORE.BaseUserControls"
    
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="IEL.GUI.IELPanelAction"
    
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:GUI="clr-namespace:IEL.GUI"
             mc:Ignorable="d" d:DesignHeight="150" d:DesignWidth="150" Focusable="True">
    <!--<.FocusVisualStyle>
        <Style>
            <Setter Property="Control.Template" Value="{x:Null}"/>
        </Style>
    </B.FocusVisualStyle>-->
    <Border x:Name="BorderActionPanel" Panel.ZIndex="3" BorderThickness="2,2,2,2" BorderBrush="#FF153523" CornerRadius="5,5,5,5" Background="#AF284234" Focusable="True" AllowDrop="True" >
        <Border.FocusVisualStyle>
            <Style>
                <Setter Property="Control.Template" Value="{x:Null}"/>
            </Style>
        </Border.FocusVisualStyle>
        <Grid x:Name="GridActionPanel" Focusable="True" Margin="2,2,2,3">
            <GUI:IELPageController x:Name="MainPageController" Padding="4,4,4,4"/>
            <TextBlock x:Name="TextBlockRightButtonIndicatorKey" HorizontalAlignment="Right" Text="0" VerticalAlignment="Bottom" Panel.ZIndex="2" FontFamily="Bahnschrift SemiBold" FontSize="16" Foreground="White" TextTrimming="WordEllipsis" TextAlignment="Right"/>
        </Grid>
    </Border>
</Base:IELObject>
