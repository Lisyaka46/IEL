<local:IELObject
    x:Class="IEL.GUI.IELTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:IEL.CORE.BaseUserControls">
    <Grid>
        <Border x:Name="TextBoxBorder" CornerRadius="6,6,6,6" BorderThickness="1,1,1,1" Grid.RowSpan="2" Grid.Row="0" BorderBrush="Black" Background="White">
            <Grid>
                <TextBox x:Name="TextBoxMain" Text="Text" FontSize="14" BorderThickness="0,0,0,0" Background="{x:Null}" SelectionTextBrush="{x:Null}" SelectionBrush="Gray" BorderBrush="{x:Null}" AllowDrop="True" Padding="0,0,5,1" ClipToBounds="True" VerticalContentAlignment="Center" Grid.RowSpan="1"/>
            </Grid>
        </Border>
    </Grid>
</local:IELObject>
