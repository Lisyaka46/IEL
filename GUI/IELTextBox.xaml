<UserControl x:Class="IEL.IELTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Cursor="IBeam">
    <Border x:Name="TextBoxBorder" CornerRadius="6,6,6,6" BorderThickness="1,1,1,1" Background="White" BorderBrush="Black">
        <Grid>
            <TextBox x:Name="TextBoxMain" Text="Text" FontSize="14" BorderThickness="0,0,0,0" Background="{x:Null}" SelectionTextBrush="{x:Null}" SelectionBrush="Gray" BorderBrush="{x:Null}" AllowDrop="True" Margin="-0.5,-0.5,-0.5,-0.5" Padding="0,0,5,1" ClipToBounds="True" VerticalContentAlignment="Center"/>
            <TextBlock x:Name="TextBlockNaming" HorizontalAlignment="Left" Margin="0,-10,0,0" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Foreground="Black"/>
        </Grid>
    </Border>
</UserControl>
