<UserControl x:Class="IEL.IELBlockInfoText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IEL"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30">
    <Border x:Name="MainBorder" BorderBrush="#FF277B4B" BorderThickness="2,2,2,2" CornerRadius="5,5,5,5" Padding="3,3,3,3" Background="#FF5CBBAC" Cursor="Help" Margin="3,3,3,3">
        <TextBlock x:Name="MainTextBlock" Text="A" VerticalAlignment="Center" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis" />
    </Border>
</UserControl>
