<UserControl x:Class="IEL.IELTextBoxCommand"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="240.5">
    <Grid>
        <Border x:Name="TextBoxBorder" BorderBrush="Black" CornerRadius="6,6,6,6" BorderThickness="1,1,1,1" Background="White">
            <TextBox x:Name="TextBoxMain" Text="Text" VerticalContentAlignment="Center" FontSize="14" MaxLines="1" BorderThickness="0,0,0,0" Background="{x:Null}" SelectionTextBrush="{x:Null}" SelectionBrush="Gray" BorderBrush="{x:Null}" AllowDrop="True" Margin="-0.5,-0.5,-0.5,-0.5"/>
        </Border>

    </Grid>
</UserControl>
