<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:Base="clr-namespace:IEL.UserElementsControl.Base"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:IEL.UserElementsControl"
    xmlns:GUI="clr-namespace:IEL.UserElementsControl"
    x:Class="IEL.UserElementsControl.IELBrowserPage"
    mc:Ignorable="d" 
    d:DesignHeight="380.454" d:DesignWidth="487.727">
    <Control.Resources>
        <ResourceDictionary Source="/IEL;component/CORE/Resources/VisualDictionary.xaml"/>
    </Control.Resources>
    <Border x:Name="BorderMain" BorderBrush="Black" BorderThickness="2,2,2,2">
        <Grid x:Name="GridMain">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="RowDefinitionMainInlays" Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="TextBlockNullPage" Text="Нет доступных вкладок" VerticalAlignment="Center" TextAlignment="Center" Grid.Row="1"/>
            <Grid Grid.Row="1">
                <local:IELPageController x:Name="MainPageController" LeftAnimateSwitch="5,5,5,5" RightAnimateSwitch="-5,-5,-5,-5"/>
            </Grid>
            <Grid>
                <Border x:Name="BorderMainPage" Grid.Column="1" BorderThickness="0,0,0,2" BorderBrush="Black">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid x:Name="GridMainButtons" Grid.RowSpan="1" Grid.ColumnSpan="1" ClipToBounds="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid x:Name="GridBorderScroll" Margin="2,2,2,2">
                                <Rectangle x:Name="RectangleScrollbar" x:FieldModifier="private" VerticalAlignment="Center" HorizontalAlignment="Left" Height="12" Fill="#FFABABAB" Width="15" RadiusY="4" RadiusX="4" Stroke="White" StrokeThickness="0"/>
                            </Grid>
                            <ScrollViewer x:Name="ScrollViewerInlays" Grid.RowSpan="1" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Hidden" PanningMode="HorizontalOnly" Grid.Row="1">
                                <ScrollViewer.OpacityMask>
                                    <LinearGradientBrush x:Name="LinearGradientScroll" EndPoint="1,0" StartPoint="0,0" Opacity="1">
                                        <GradientStop Color="#00000000" Offset="0"/>
                                        <GradientStop Color="Black" Offset="0.01"/>
                                        <GradientStop Color="Black" Offset="0.99"/>
                                        <GradientStop Color="#00000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </ScrollViewer.OpacityMask>
                                <Grid x:Name="GridMainScrollViewer" Background="#00000000">
                                    <Grid x:Name="GridMainInlays" HorizontalAlignment="Left">
                                    </Grid>
                                </Grid>
                            </ScrollViewer>
                        </Grid>
                        <local:IELButtonImage x:Name="IELButtonAddInlay" x:FieldModifier="private" Grid.Column="1" Height="40" Width="40" CornerRadius="5,5,5,5" HorizontalAlignment="Right" Margin="5,0,5,0"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
